@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.UpdateModel

@{
    ViewData["Title"] = "Update page";
}

<h1>Update</h1>
<style>
    h1 {
        font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
    }
</style>

<div class="container">
    <style>
        body {
            background-color: peachpuff;
        }

        input[type=text] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
        }
        }
    </style>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.SchoolName" class="control-label"></label>
            <input asp-for="Product.SchoolName" class="form-control" />
            <span asp-validation-for="Product.SchoolName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolAddress" class="control-label"></label>
            <input asp-for="Product.SchoolAddress" class="form-control" />
            <span asp-validation-for="Product.SchoolAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolContactInfo" class="control-label"></label>
            <input asp-for="Product.SchoolContactInfo" class="form-control" />
            <span asp-validation-for="Product.SchoolContactInfo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolEmail" class="control-label"></label>
            <input asp-for="Product.SchoolEmail" class="form-control" />
            <span asp-validation-for="Product.SchoolEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Url" class="control-label"></label>
            <input asp-for="Product.Url" class="form-control" />
            <span asp-validation-for="Product.Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Image" class="control-label"></label>
            <input asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}