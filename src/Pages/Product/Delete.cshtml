@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete page";
}


<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.SchoolName" class="control-label"></label>
            <input asp-for="Product.SchoolName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolAddress" class="control-label"></label>
            <input asp-for="Product.SchoolAddress" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.SchoolContactInfo" class="control-label"></label>
            <input asp-for="Product.SchoolContactInfo" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.SchoolEmail" class="control-label"></label>
            <input asp-for="Product.SchoolEmail" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.ProductType" class="control-label"></label>
            <input asp-for="Product.ProductType" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Url" class="control-label"></label>
            <input asp-for="Product.Url" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.Image" class="control-label"></label>
            <input asp-for="Product.Image" class="form-control" disabled />
        </div>

        <h1>Confirm Delete of this item</h1>
        <style>
            body {
                background-color: peachpuff;
            }

            h1 {
                font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
            }

            input[type=text] {
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                box-sizing: border-box;
                font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
            }
            }
        </style>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}